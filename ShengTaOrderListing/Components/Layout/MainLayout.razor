@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
        <MudAppBarSpacer />
        <MudText Typo="Typo.h6">2025 PPSM MEMBERS DAY ORDER LISTING</MudText>
    </MudAppBar>

    <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always">
         <MudNavMenu>
            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Person">Customer Details</MudNavLink>
            <MudNavLink Href="/store" Icon="@Icons.Material.Filled.Store">Product Details</MudNavLink>
            <MudNavLink Href="/Order" Icon="@Icons.Material.Filled.History">History</MudNavLink>

        </MudNavMenu> 

    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-8">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
}